pkgname=himitsu-ssh
pkgver="0_git20220616"
_commit=8a15d0b69633bfa799427374d4b98006ca8bf9ac
pkgrel=0
pkgdesc="SSH integration for Himitsu"
url="https://himitsustore.org"
arch="x86_64 aarch64" # Hare
license="GPL-3.0-only"
depends="himitsu"
makedepends="hare scdoc hare-ssh himitsu-dev"
subpackages="$pkgname-doc"
source="
	$pkgname-$_commit.tar.gz::https://git.sr.ht/~sircmpwn/himitsu-ssh/archive/$_commit.tar.gz
"
builddir="$srcdir/$pkgname-$_commit"

build() {
	make -j1 PREFIX=/usr
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" PREFIX=/usr install
}

